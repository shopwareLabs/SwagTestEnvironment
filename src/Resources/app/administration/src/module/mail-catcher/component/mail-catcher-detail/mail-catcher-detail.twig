<sw-page class="sw-mail-catcher-detail">
    <template slot="smart-bar-header">
        <h2 v-if="archive">{{ archive.subject }}</h2>
    </template>

    <template slot="content">
        <sw-card-view v-if="archive">
            <sw-card :title="$tc('mail-catcher.detail.metadata.title')">
                <sw-text-field :label="$tc('mail-catcher.detail.metadata.sentDate')" :disabled="true" v-model="createdAtDate"></sw-text-field>
                <sw-text-field :label="$tc('mail-catcher.detail.metadata.sender')" :disabled="true" v-model="senderText"></sw-text-field>
                <sw-text-field :label="$tc('mail-catcher.detail.metadata.receiver')" :disabled="true" v-model="receiverText"></sw-text-field>
                <sw-text-field :label="$tc('mail-catcher.detail.metadata.subject')" :disabled="true" v-model="archive.subject"></sw-text-field>
            </sw-card>
            <sw-card :title="$tc('mail-catcher.detail.content.title')">
                <h4>HTML</h4>
                <iframe :src="htmlText" sandbox frameborder="0"></iframe>
                <h4>Plain</h4>

                <iframe :src="plainText" sandbox frameborder="0"></iframe>
            </sw-card>
        </sw-card-view>
    </template>
</sw-page>
